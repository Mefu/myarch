* {
    spacing:                     2;
    red:                         rgba ({{ colors.red.dark|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    blue:                        rgba ({{ colors.blue.dark|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    lightbg:                     rgba ({{ colors.black.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    lightfg:                     rgba ({{ colors.white.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});

    foreground:                  rgba ({{ colors.white.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});

    normal-foreground:           @foreground;
    alternate-normal-foreground: @foreground;
    selected-normal-foreground:  @foreground;

    urgent-foreground:           @foreground;
    alternate-urgent-foreground: @urgent-foreground;
    selected-urgent-foreground:  @selected-normal-foreground;

    active-foreground:           @foreground;
    alternate-active-foreground: @active-foreground;
    selected-active-foreground:  @selected-normal-foreground;

    background:                  rgba ({{ colors.black.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});

    normal-background:           @background;
    alternate-normal-background: rgba ({{ colors.black.dark|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    selected-normal-background:  rgba ({{ colors.blue.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});

    urgent-background:           @red;
    alternate-urgent-background: rgba ({{ colors.red.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    selected-urgent-background:  @selected-normal-background;

    active-background:           rgba ({{ colors.orange.dark|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    alternate-active-background: rgba ({{ colors.orange.light|colorf(fromf='rgba_hex', tof='rgba_values')|join(', ') }});
    selected-active-background:  @selected-normal-background;

    background-color:            @background;
    bordercolor:                 @foreground;
    border-color:                @foreground;
    separatorcolor:              @foreground;
}
#window {
    background-color: @background;
    border:           1;
    padding:          5;
}
#mainbox {
    border:  0;
    padding: 0;
}
#message {
    border:       1px dash 0px 0px ;
    border-color: @separatorcolor;
    padding:      1px ;
}
#textbox {
    text-color: @foreground;
}
#listview {
    fixed-height: 0;
    border:       2px dash 0px 0px ;
    border-color: @separatorcolor;
    spacing:      2px ;
    scrollbar:    true;
    padding:      2px 0px 0px ;
}
#element {
    border:  0;
    padding: 1px ;
}
#element.normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
}
#element.normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
}
#element.normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
}
#element.selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
#element.selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
}
#element.selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
}
#element.alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
}
#element.alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color:       @alternate-urgent-foreground;
}
#element.alternate.active {
    background-color: @alternate-active-background;
    text-color:       @alternate-active-foreground;
}
#scrollbar {
    width:        4px ;
    border:       0;
    handle-width: 8px ;
    padding:      0;
}
#sidebar {
    border:       2px dash 0px 0px ;
    border-color: @separatorcolor;
}
#button.selected {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
#inputbar {
    spacing:    0;
    text-color: @normal-foreground;
    padding:    1px ;
}
#case-indicator {
    spacing:    0;
    text-color: @normal-foreground;
}
#entry {
    spacing:    0;
    text-color: @normal-foreground;
}
#prompt {
    spacing:    0;
    text-color: @normal-foreground;
}
#inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
#textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: @normal-foreground;
}
